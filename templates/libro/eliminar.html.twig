{% extends 'base2.html.twig' %}

{% block title %}
    Eliminar libro
{% endblock %}


{% block body %}
    <h1>Eliminación de {{ libro }}</h1>

    <div class="alert alert-danger">
        ¡Aviso! Se dispone a eliminar a {{ libro }}. Esta operación
        no se puede deshacer.
    </div>
    <form method="post">
        <button type="submit" name="confirmar" value="si" class="btn btn-danger"><i class="fa fa-trash-alt"></i> Eliminar definitivamente</button>
        <a href="{{ path('libro_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver al listado sin eliminar</a>
    </form>
{% endblock %}

